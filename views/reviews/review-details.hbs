<form action="/review/{{_id}}/delete" method="post">
  <button type="submit" class="btn btn-outline-info"> Delete </button>

</form>

<a id="al" href="/review/{{_id}}/edit" class="btn btn-outline-info">
  Edit review</a>

<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div
            class="rounded-top text-white d-flex flex-row"
            style="background-color: #35439c61; height:200px;"
          >
            {{! user profile image}}
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <img
                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                alt="Generic placeholder image"
                class="img-fluid img-thumbnail mt-4 mb-2"
                style="width: 150px; z-index: 1"
              />

              <button
                type="button"
                class="btn btn-outline-dark"
                data-mdb-ripple-color="dark"
                style="z-index: 1;"
              >
                Edit profile
              </button>
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5>{{username}}</h5>
              <p>{{userCity}}</p>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 h5">253</p>
                <p class="small text-muted mb-0">Photos</p>
              </div>
              <div class="px-3">
                <p class="mb-1 h5">1026</p>
                <p class="small text-muted mb-0">Followers</p>
              </div>
              <div>
                <p class="mb-1 h5">478</p>
                <p class="small text-muted mb-0">Following</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">My experience: {{headline}}</p>
              <p class="lead fw-normal mb-1">{{typeOfExperience}}</p>

              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1">{{placeName}}</p>
                <p class="font-italic mb-1">{{city}}, {{contry}}</p>
                <p class="font-italic mb-0">Price: {{price}}</p>
                <p class="font-italic mb-0">Rating(1-5) : {{rating}}</p>
                <br />
                <p class="font-italic mb-0">{{reviewText}}</p>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0">Recent photos</p>
              <p class="mb-0"><a href="#!" class="text-muted">Show all</a></p>
            </div>
            <div class="row g-2">
              <div class="col mb-2">
                <img
                  src={{imageUrl}}
                  alt="image 1"
                  class="w-100 rounded-3"
                />
              </div>
              <div class="col mb-2">
                <img
                  src={{imageUrl}}
                  alt="image 1"
                  class="w-100 rounded-3"
                />
              </div>
            </div>
            <div class="row g-2">
              <div class="col">
                <img
                  src={{imageUrl}}
                  alt="image 1"
                  class="w-100 rounded-3"
                />
              </div>
              <div class="col">
                <img
                  src={{imageUrl}}
                  alt="image 1"
                  class="w-100 rounded-3"
                />
              </div>
              
 <div class="conteiner pt-5">
   <div class="container">
    <form action="/review/{{_id}}/comments" method="POST"> 

    <textarea class='form-control' name="text" placeholder="Comment"></textarea>
      <div class="text-right">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>


    </form>
   </div>
 </div>
 {{#each comments}}
 <div class="conteiner pt-5">
   <div class="container">
    <form action="/review/{{_id}}/comments" method="POST"> 

    <p id="commentDate">{{date}}</p>
    <textarea class='form-control' name="text" placeholder="Comment"> {{text}} </textarea>
     


    </form>
   </div>
 </div>
 {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

