

<h1>Create your review!</h1>

<h3>{{userInSession.username}} </h3>

<form action="/review/create" method="POST" enctype="multipart/form-data">
  <div class="row g-3">
    <div class="col-auto">

      <input
        type="text"
        class="form-control"
        name="typeOfExperience"
        placeholder="Type Of Experience"
        value="{{typeOfExperience}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="headline"
        placeholder="Headline"
        value="{{headline}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="placeName"
        placeholder="Place Name"
        value="{{placeName}}"
      />
    </div>
    <div class="row">
  <div class="col-md-6">
    <form action="/review/create" method="post" enctype="multipart/form-data"> {{!-- !!! --}}
      <div class="form-group">
        <label>Title:
          <input type="file" name="review-cover-image" class="form-control" />
        </label>
      </div>
    {{!-- <div class="col-auto ">
      <input type="text" class="form-control" name="picture" placeholder="Add Picture" value="{{picture}}">
    </div>  --}}
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="city"
        placeholder="City"
        value="{{city}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="contry"
        placeholder="Contry"
        value="{{contry}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="price"
        placeholder="Price"
        value="{{price}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="rating"
        placeholder="Rating 1-5"
        value="{{rating}}"
      />
    </div>
    <div class="col">
      <textarea
        id="reviewText"
        class="form-control"
        name="reviewText"
        rows="4"
        cols="50"
        placeholder="Write your review here."
        value="{{reviewText}}"
      ></textarea>
    </div>
  </div>

  <button type="submit" class="btn btn-outline-info">Add Review</button>
</form>
