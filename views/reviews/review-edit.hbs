<form action="/review/{{editReview._id}}/edit" method="POST">
  <div class="row g-3">
    <div class="col-auto">

      <input
        type="text"
        class="form-control"
        name="typeOfExperience"
        placeholder="Type Of Experience"
        value="{{editReview.typeOfExperience}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="headline"
        placeholder="Headline"
        value="{{editReview.headline}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="placeName"
        placeholder="Place Name"
        value="{{editReview.placeName}}"
      />
    </div>
    <div class="form-group">
      <label for="exampleFormControlFile1">Add Images</label>
      <input
        type="file"
        class="form-control"
        id="exampleFormControlFile1"
        name="picture"
        placeholder="Add Picture"
        value="{{editReview.picture}}"
      />
    </div>
    {{!-- <div class="col-auto ">
      <input type="text" class="form-control" name="picture" placeholder="Add Picture" value="{{picture}}">
    </div>  --}}
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="city"
        placeholder="City"
        value="{{editReview.city}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="contry"
        placeholder="Contry"
        value="{{editReview.contry}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="price"
        placeholder="Price"
        value="{{editReview.price}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="rating"
        placeholder="Rating 1-5"
        value="{{editReview.rating}}"
      />
    </div>
    <div class="col">
      <textarea
        id="reviewText"
        class="form-control"
        name="reviewText"
        rows="4"
        cols="50"
        placeholder="Write your review here."
        value = "{{editReview.reviewText}}"
      >{{editReview.reviewText}}</textarea>    
    </div>
  </div>

  <button type="submit" class="btn btn-outline-info">Edit Review</button>
</form>
