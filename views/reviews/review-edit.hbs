<form action="/review/{{editReview._id}}/edit" method="POST"enctype="multipart/form-data" >
  <div class="row g-3">
    <div class="col-auto">

      <input
        type="text"
        class="form-control"
        name="typeOfExperience"
        placeholder="Type Of Experience"
        value="{{editReview.typeOfExperience}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="headline"
        placeholder="Headline"
        value="{{editReview.headline}}"
      />
    </div>
    <div class="col-auto">
      <label> Establishment's name: 
        <input
          type="text"
          class="form-control"
          name="placeName"
          placeholder="Place Name"
          value="{{editReview.placeName}}"
        />
      </label>
    </div>
    <div class="form-group">
      <label>Add Images 
        <input
          type="file"
          class="form-control"
          name='review-cover-image'
          placeholder="Add Picture"
          value="{{editReview.imageUrl}}"
        />
      </label>
    </div>
    {{!-- <div class="col-auto ">
      <input type="text" class="form-control" name="picture" placeholder="Add Picture" value="{{picture}}">
    </div>  --}}
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="city"
        placeholder="City"
        value="{{editReview.city}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="contry"
        placeholder="Contry"
        value="{{editReview.contry}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="price"
        placeholder="Price"
        value="{{editReview.price}}"
      />
    </div>
    <div class="col-auto">
      <input
        type="text"
        class="form-control"
        name="rating"
        placeholder="Rating 1-5"
        value="{{editReview.rating}}"
      />
    </div>
    <div class="col">
      <textarea
        id="reviewText"
        class="form-control"
        name="reviewText"
        rows="4"
        cols="50"
        placeholder="Write your review here."
        value = "{{editReview.reviewText}}"
      >{{editReview.reviewText}}</textarea>    
    </div>
  </div>

  <button type="submit" class="buttonStyle1">Edit Review</button>
</form>
